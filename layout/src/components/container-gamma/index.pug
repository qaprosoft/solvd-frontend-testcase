include ../../elements/tab-button/tab-button
include ../../elements/arrow-link/arrow-link

- 
  var items = [
    { img: '/assets/images/container-image-1.png' }, 
    { img: '/assets/images/container-image-2.png' }, 
    { img: '/assets/images/container-image-3.png' },
    { img: '/assets/images/container-image-1.png' },
    { img: '/assets/images/container-image-2.png' },
    { img: '/assets/images/container-image-3.png' },
  ]

mixin listItem({ imgSrc })
  div.container-gamma__item
    div.container-gamma__item-inner
      img(src=imgSrc).container-gamma__img
      h3.container-gamma__title
        | This is a wide container title stretching two lines.
      p.container-gamma__description
        | Lorem ipsum dolor sit amet, consectetur adipiscing elit, 
        | sed do eiusmod tempor incididunt. Lorem ipsum dolor sit amet, consectetur adipiscing.

      div.container-gamma__arrow-link.font-heading-xs
        +arrowLink({ name: 'Link & Arrow', href: '#', mod: ['dark']})

section.container-gamma
  button.container-gamma__chevron.container-gamma__chevron--left#sliderLeftBtn 
    include ../../assets/icons/chevron-left.svg
  button.container-gamma__chevron.container-gamma__chevron--right#sliderRightBtn
    include ../../assets/icons/chevron-right.svg

  div.container-gamma__items#containerGammaItems
    each item in items
      +listItem({ imgSrc: item.img })

  div.container-gamma__dots
    each x in items
      - var isActive = `${items.indexOf(x) === 0}`

      div.container-gamma__dot(data-active=isActive)
        include ../../assets/icons/dot.svg

script
  include ./slider.js
